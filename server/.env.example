# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/gantt_chart_db?schema=public"

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CLIENT_URL=http://localhost:3000

# JWT Configuration
# IMPORTANT: Generate a secure random secret for production
# Example: openssl rand -base64 64
JWT_SECRET=your-secret-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Sentry Error Tracking (optional - only for production)
SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# File Upload
MAX_FILE_SIZE=10485760

# Session
SESSION_SECRET=your-session-secret-change-in-production

# Email Configuration (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@ganttchart.app
