# API Configuration
VITE_API_BASE_URL=http://localhost:3001/api
VITE_API_URL=http://localhost:5000

# Environment
VITE_ENVIRONMENT=development

# Sentry Error Tracking (optional - only for production)
VITE_SENTRY_DSN=

# Release Version (auto-populated in CI/CD)
VITE_RELEASE=

# Feature Flags
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_WEBSOCKETS=false

# Auto-save Configuration (milliseconds, 0 to disable)
VITE_AUTO_SAVE_INTERVAL=5000

# Undo/Redo History Size
VITE_MAX_HISTORY_SIZE=50

# React Query Configuration (milliseconds)
VITE_QUERY_STALE_TIME=300000
VITE_QUERY_CACHE_TIME=1800000
